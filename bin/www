#!/usr/bin/env node

/**
 * Module dependencies.
 */
const sequelize=require("../config/connection").sequelize
var app = require('../app');
var debug = require('debug')('bank-statement:server');
var http = require('http');
const User=require("../models/user").User
const Session=require("../models/session").Session
const Usertransaction=require("../models/transactions").Usertransaction

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */
async function db_op(){
  try{
    await sequelize.authenticate()
    console.log("database connection made")
    //await User.sync({force:true})
    //await Session.sync({force:true})
    //await Usertransaction.sync({force:true})
    server.listen(port,()=>{console.log("server started listening")});
  }
  catch(e){
    console.log("database connection couldnt be made")
    console.log(e)
  }
}
db_op()
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
